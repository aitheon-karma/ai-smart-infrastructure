{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6", "dom", "es2017"],
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "../dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "../node_modules/@aitheon/core-server/types/*",
        "server/types/*"
      ]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true
  },
  "include": [
    "**/*"
  ]
}
